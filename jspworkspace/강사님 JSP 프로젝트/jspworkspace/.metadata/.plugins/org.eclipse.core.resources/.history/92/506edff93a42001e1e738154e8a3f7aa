		html.setPublisher("한빛미디어");
		html.setCategory(null);
		html.setUnitsInStock(1000);
		html.setTotalPages(1000);
		html.setReleaseDate(null);
		html.setCondition(null);
		
		Book java = new Book();
		java.setBookId("1002");
		java.setName("");
